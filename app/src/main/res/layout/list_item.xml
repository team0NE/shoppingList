<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/tvCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/card_example" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:gravity="center_vertical" >

            <ImageView
                    android:id="@+id/ivRowDelete"
                    android:layout_width="@dimen/dimension_20dp"
                    android:layout_height="@dimen/dimension_20dp"
                    android:layout_margin="@dimen/dimension_7dp"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/lightGray" />

            <ImageView
                    android:id="@+id/ivRowEdit"
                    android:layout_width="@dimen/dimension_20dp"
                    android:layout_height="@dimen/dimension_20dp"
                    android:layout_margin="@dimen/dimension_7dp"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/lightGray" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>