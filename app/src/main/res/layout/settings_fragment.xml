<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
            android:id="@+id/settings_title_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application"
            android:textSize="@dimen/dimension_24sp"
            android:textAlignment="textStart"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settings_title_second"
            app:layout_constraintBottom_toBottomOf="@id/settings_title_second"
    />

    <TextView
            android:id="@+id/settings_title_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/destination_settings"
            android:textSize="@dimen/dimension_54sp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="@dimen/margin_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/dark_theme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme"
            android:textSize="@dimen/dimension_24sp"
            android:layout_marginStart="@dimen/margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dark_theme_switch"
    />
    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/dark_theme_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_54dp"
            android:checked="true"
            app:layout_constraintStart_toStartOf="@id/settings_title_second"
            app:layout_constraintTop_toBottomOf="@id/settings_title_second"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/light_theme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light_theme"
            android:textSize="@dimen/dimension_24sp"
            android:layout_marginStart="@dimen/margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/light_theme_switch"
    />
    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/light_theme_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_54dp"
            android:checked="false"
            app:layout_constraintStart_toStartOf="@id/dark_theme_switch"
            app:layout_constraintTop_toBottomOf="@id/dark_theme_switch"

    />


</androidx.constraintlayout.widget.ConstraintLayout>